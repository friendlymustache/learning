
<div class="ui centered header"> {{name}} </div>


<div class="ui breadcrumb">
  {{#each par in parents}}
  	  {{#link-to 'topic' par.name class="section"}} {{par.name}} {{/link-to}}
	  <i class="right chevron icon divider"></i>
  {{/each}}
  <div class="active section">{{name}}</div>
</div>

<div class="ui link list">
	{{#if links}}
	    <div class="ui small header"> Links </div>
		{{#each link in links}}
				<a target="_blank" class="item link" {{bind-attr href="link.url"}}>{{link.title}}</a>
		{{/each}}
	{{/if}}

	{{#if children}}
		<div class="ui small header"> Subtopics </div>
		{{#each topic in children}}
			{{#link-to 'topic' topic.name class="item"}} {{topic.name}} {{/link-to}}
		{{/each}}
	{{/if}}
</div>

{{outlet}}